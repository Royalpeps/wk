<div class="container">
  <div class="row">
    <h2 class="center-align">Connexion</h2>
    <div class="left-align"><%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, wrapper_html: { class: 'input-field' } %>
        <%= f.input :password, required: false, wrapper_html: { class: 'input-field' } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
