<div class="container">
  <div class="row">
    <h2 class="center-align">Connexion</h2>
    <div class="left-align"><%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <i class="material-icons left">email</i>
        <%= f.input :email, required: false, autofocus: true %>
        <i class="material-icons left">vpn_key</i>
        <%= f.input :password, required: false %>
        <input type="checkbox" id="test5" />
        <label for="test5"><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></label>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>


<%= content_for(:after_js) do %>
<script>
$(document).ready(function() {
    Materialize.updateTextFields();
  });
 </script>
<% end %>
