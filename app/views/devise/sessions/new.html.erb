<div class="container">
  <div class="row">
    <div class="col s12 m6 offset-m3">
      <div class="my-box1 valign-wrapper">
        <div class="card full-width">
          <div class="card-content">
           <br>
              <h2 class="center-align">Connexion</h2>
              <%= simple_form_for(resource, as: resource_name,  url: session_path(resource_name)) do |f| %>
              <br>
              <br>
              <div class="form-inputs">
                <%= f.input :email, required: false, autofocus:  true, wrapper_html: { class: 'input-field' }   %>
                <%= f.input :password, required: false,   wrapper_html: { class: 'input-field' } %>
                <%= f.input :remember_me, as: :boolean if   devise_mapping.rememberable? %>
              </div>
            </div>
            <div class="form-actions center">
              <input type="submit"  name= "commit" value="  Connexion" class="btn btn-primary btn-lg"   data-disable-with="Login">
            </div>
            <% end %>
            <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
