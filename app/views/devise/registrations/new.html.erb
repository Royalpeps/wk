<div class="container">
  <div class="row valign-wrapper">
    <div class="col s6 offset-s3 valign">
      <div class="card">
        <div class="card-content">
          <h2 class="center-align">Inscription</h2>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true, wrapper_html: { class: 'input-field' }  %>
            <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), wrapper_html: { class: 'input-field' }  %>
            <%= f.input :password_confirmation, required: true, wrapper_html: { class: 'input-field' }  %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up" %>
          </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
