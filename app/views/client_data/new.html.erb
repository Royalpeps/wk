<div class="container">
  <div class="row">
    <div class="col s12">
      <h2 class="center-align">Veuillez entrer vos informations personnelles</h2>
      <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col s12 m6">
      <div class="card-panel z-depth-2">
        <%= simple_form_for(@client_datum) do |f| %>
        <%= f.error_notification %>
        <h4 class="center-align">Père
          <i class="material-icons">edit</i>
        </h4>
        <div class="input-field">
          <%= f.input :first_name, required: true, autofocus: true %>
          <%= f.input :last_name, required: true, autofocus: true %>
          <%= f.input :profession, required: true, autofocus: true %>
          <%= f.input :phone_number, required: true, autofocus: true %>
          <%= f.input :address, required: true %>
        </div>
      </div>
    </div>
    <div class="col s12 m6">
      <div class="card-panel z-depth-2">
        <h4 class="center-align">Mère
          <i class="material-icons">edit</i>
        </h4>
        <div class="input-field">
          <%= f.input :first_name, required: true, autofocus: true %>
          <%= f.input :last_name, required: true, autofocus: true %>
          <%= f.input :profession, required: true, autofocus: true %>
          <%= f.input :phone_number, required: true, autofocus: true %>
          <%= f.input :address, required: true %>
        </div>
      </div>
    </div>
    <div class="col s12">
      <div class="card-panel z-depth-2">
        <h4 class="center-align">Informations administratives
          <i class="material-icons">edit</i>
        </h4>
        <div class="input-field">
          <%= f.input :beneficiary_number, required: true, autofocus: true %>
          <%= f.input :insurance_name, required: true, autofocus: true %>
          <%= f.input :insurance_address, required: true, autofocus: true %>
          <%= f.input :insurance_policy, required: true, autofocus: true %>
        </div>
      </div>
    </div>
    <div class="container center-align">
      <div class="row">
        <div class="col s12">
          <%= f.button :submit, "Enregistrer", class: "btn btn-primary btn-lg" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
